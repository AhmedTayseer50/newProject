{
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "dist/dr-enam",
  "framework": "angular",
  "rewrites": [
    { "source": "/ar/:path*", "destination": "/ar/" },
    { "source": "/en/:path*", "destination": "/en/" },
    { "source": "/", "destination": "/ar/" }
  ],
  "headers": [
    {
      "source": "/(ar|en)/(.*)\\.(js|css|png|jpg|jpeg|svg|webp|woff|woff2|ttf|eot)$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(ar|en)/",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" }
      ]
    }
  ]
}
